{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "theme": "gruvbox",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true,
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true,
    },
    "cloudflare": {
      "type": "local",
      "command": ["npx", "-y", "@cloudflare/mcp-server-cloudflare@latest"],
      "enabled": true
    },
    "nuxt-ui": {
      "type": "remote",
      "url": "https://ui.nuxt.com/mcp",
      "enabled": true
    },
    "nuxt": {
      "type": "remote",
      "url": "https://nuxt.com/mcp",
      "enabled": true
    }
  },
}
